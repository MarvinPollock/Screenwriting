<h1>Listing equipment</h1>

<table>
  <tr>
    <th>Status</th>
    <th>P name</th>
    <th>Descr</th>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @equipment.each do |equipment| %>
  <tr>
    <td><%= equipment.status %></td>
    <td><%= equipment.p_name %></td>
    <td><%= equipment.descr %></td>
    <td><%= equipment.name %></td>
    <td><%= link_to 'Show', equipment %></td>
    <td><%= link_to 'Edit', edit_equipment_path(equipment) %></td>
    <td><%= link_to 'Destroy', equipment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

